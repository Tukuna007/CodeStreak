public class ClimbngStairs {

    public int climbStairs(int n) {
        if (n <= 1) {
            return 1;
        }

        int prev = 1;
        int curr = 1;

        for (int i = 2; i <= n; i++) {
            int next = curr + prev;
            prev = curr;
            curr = next;
        }

        return curr;
    }

    public static void main(String[] args) {
        ClimbngStairs solution = new ClimbngStairs();
        int n = 5;
        int ways = solution.climbStairs(n);
        System.out.println("Number of ways to climb " + n + " stairs: " + ways);
    }
}
